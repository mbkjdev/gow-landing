---
import { Icon } from "astro-icon/components";
import ContentSection from "../components/content-section.astro";
import type { FeatureItem } from "../types";

const features: Array<FeatureItem> = [
  {
    title: "Factura Electrónica",
    description:
      "Emití facturas y notas de crédito 100% electrónicas via SIFEN",
    icon: "mdi:cloud-check-outline",
  },
  {
    title: "Ventas",
    description:
      "Con nuestro POS podés emitir facturas de servicios o vender productos con control de stock",
    icon: "mdi:cart-outline",
  },
  {
    title: "Inventario",
    description:
      "Llevá un control detallado de tus productos, variantes, listas de precios con soporte multi-depósito",
    icon: "mdi:counter",
  },
  {
    title: "Pedidos",
    description:
      "Recibí pedidos de tus clientes y gestioná su estado de forma sencilla",
    icon: "mdi:truck-delivery-outline",
  },
  {
    title: "Clientes",
    description:
      "Potenciá tus ventas con información detallada de tus clientes y sus compras",
    icon: "mdi:account-heart-outline",
  },
  {
    title: "Encuestas",
    description:
      "Generá encuestas, cuestionarios y formularios para recabar datos o dar capacitaciones",
    icon: "mdi:list-box-outline",
  },
];
---

<ContentSection title="Unboxing" id="features">
  <Fragment slot="lead">
    Gow incluye las mejores <span class="text-primary">herramientas</span> del mercado y agrega sus propias <span class="text-primary">innovaciones</span>.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 gap-4 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center  text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
